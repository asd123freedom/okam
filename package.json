{
  "private": true,
  "name": "okam",
  "description": "A progressive development framework for mini program",
  "scripts": {
    "clean": "rimraf package-lock.json packages/*/node_modules packages/*/package-lock.json",
    "bootstrap": "lerna bootstrap --ignore-scripts",
    "init": "bash ./scripts/install.sh",
    "lint": "lerna run lint",
    "test": "cross-env NODE_ENV=development nyc mocha --require @babel/register --recursive \"packages/*/test/tasks/**/*.spec.js\"",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "commit": "git-cz",
    "commitmsg": "commitlint -E HUSKY_GIT_PARAMS",
    "publish": "lerna publish --registry https://registry.npmjs.org",
    "publish:build": "lerna publish prerelease --force-publish=okam-build --registry https://registry.npmjs.org",
    "build": "echo \"Please implement your build script and modify scripts.build section in package.json\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "fecs --reporter=baidu --rule"
      ]
    },
    "ignore": [
      "dist/**/*.js",
      "example/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@commitlint/cli": "^7.1.2",
    "@commitlint/prompt": "^7.1.2",
    "autoprefixer": "^9.2.0",
    "babel-core": "^6.26.3",
    "babel-plugin-empower-assert": "^2.0.0",
    "babel-plugin-espower": "^3.0.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "chalk": "^2.4.1",
    "codecov": "^3.1.0",
    "commitizen": "^3.0.2",
    "cross-env": "^5.2.0",
    "expect": "^1.20.2",
    "fecs": "^1.4.0",
    "glob": "^7.1.3",
    "husky": "^1.0.0",
    "intelli-espower-loader": "^1.0.1",
    "lerna": "^3.4.0",
    "less": "^3.8.1",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "postcss": "^7.0.3",
    "power-assert": "^1.6.1",
    "pug": "^2.0.3",
    "rimraf": "^2.6.2",
    "stylus": "^0.54.5"
  },
  "engine": {
    "node": ">= 6"
  }
}
